# Coinswarm Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# General Settings
# ============================================================================
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO
DEBUG=False

# ============================================================================
# Coinbase Advanced Trade API
# ============================================================================
COINBASE_API_KEY=your_api_key_here
COINBASE_API_SECRET=your_api_secret_here
COINBASE_ENVIRONMENT=sandbox  # sandbox or production
COINBASE_API_BASE_URL=https://api.coinbase.com

# ============================================================================
# Alpaca Trading API
# ============================================================================
ALPACA_API_KEY=your_alpaca_key_here
ALPACA_API_SECRET=your_alpaca_secret_here
ALPACA_ENVIRONMENT=paper  # paper or live
ALPACA_API_BASE_URL=https://paper-api.alpaca.markets

# ============================================================================
# Redis (Vector Database & Cache)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# Redis Vector Index Configuration
REDIS_VECTOR_DIM=384
REDIS_VECTOR_METRIC=COSINE
REDIS_HNSW_M=16
REDIS_HNSW_EF_CONSTRUCTION=200
REDIS_HNSW_EF_RUNTIME=10

# ============================================================================
# NATS Message Bus
# ============================================================================
NATS_URL=nats://localhost:4222
NATS_MAX_RECONNECT_ATTEMPTS=10
NATS_RECONNECT_TIME_WAIT=2

# ============================================================================
# PostgreSQL (Relational Data)
# ============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=coinswarm
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=coinswarm
POSTGRES_MAX_CONNECTIONS=20

# ============================================================================
# InfluxDB (Time-Series Data)
# ============================================================================
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your_influxdb_token
INFLUXDB_ORG=coinswarm
INFLUXDB_BUCKET=market_data

# ============================================================================
# MongoDB (Document Storage)
# ============================================================================
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=coinswarm
MONGODB_MAX_POOL_SIZE=100

# ============================================================================
# MCP Server Configuration
# ============================================================================
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=3000
MCP_SERVER_WORKERS=4
MCP_RATE_LIMIT_REQUESTS=100
MCP_RATE_LIMIT_PERIOD=60

# ============================================================================
# Trading Configuration
# ============================================================================
TRADING_MODE=paper  # paper or live
MAX_POSITION_SIZE_PCT=25  # % of portfolio
MAX_ORDER_VALUE=1000  # USD
MAX_DAILY_TRADES=50
MAX_CONCURRENT_TRADES=5
MAX_DAILY_LOSS_PCT=5  # % of portfolio
MAX_DRAWDOWN_PCT=10  # % of portfolio

# ============================================================================
# Risk Management
# ============================================================================
STOP_LOSS_DEFAULT_PCT=2.0
TAKE_PROFIT_DEFAULT_PCT=4.0
POSITION_SIZE_DEFAULT=100  # USD

# ============================================================================
# Memory System Configuration
# ============================================================================
MEMORY_QUORUM_SIZE=3
MEMORY_EPISODIC_TTL=2592000  # 30 days in seconds
MEMORY_PATTERN_MIN_SUPPORT=100
MEMORY_PATTERN_MIN_SHARPE=1.0
MEMORY_PATTERN_MAX_DRAWDOWN=10.0

# ============================================================================
# Agent Configuration
# ============================================================================
AGENT_HEARTBEAT_INTERVAL=30  # seconds
AGENT_MAX_RETRY_ATTEMPTS=3
AGENT_TIMEOUT=60  # seconds

# Committee Agent Weights (must sum to 1.0)
AGENT_WEIGHT_TREND=0.30
AGENT_WEIGHT_MEAN_REV=0.25
AGENT_WEIGHT_EXECUTION=0.15
AGENT_WEIGHT_RISK=0.20
AGENT_WEIGHT_ARBITRAGE=0.10

# ============================================================================
# External Data Sources
# ============================================================================
# NewsAPI
NEWSAPI_KEY=your_newsapi_key_here

# Twitter API
TWITTER_API_KEY=your_twitter_key_here
TWITTER_API_SECRET=your_twitter_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Reddit API
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_secret_here
REDDIT_USER_AGENT=Coinswarm/0.1.0

# Etherscan
ETHERSCAN_API_KEY=your_etherscan_key_here

# FRED (Federal Reserve Economic Data)
FRED_API_KEY=your_fred_key_here

# ============================================================================
# Monitoring & Observability
# ============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Sentry (Error Tracking)
SENTRY_DSN=

# ============================================================================
# Development & Testing
# ============================================================================
PYTEST_ASYNCIO_MODE=auto
TEST_DATABASE_URL=postgresql://test:test@localhost:5433/coinswarm_test
